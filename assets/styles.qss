/* General App Styling */
QWidget {
    background-color: #282C34;
    color: white;
    font-size: 14px;
}

/* Buttons */
QPushButton {
    background-color: #4CAF50;
    color: white;
    border-radius: 5px;
    padding: 8px;
}

QPushButton:hover {
    background-color: #45a049;
}

QPushButton:pressed {
    background-color: #388E3C;
}

/* List Widget */
QListWidget {
    background-color: #3C3F41;
    color: white;
    border: 1px solid #555;
}
